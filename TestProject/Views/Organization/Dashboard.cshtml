@model TestProject.Models.DashViewModel
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>
<hr />
@using (Html.BeginForm("Index", "Organization", FormMethod.Get))
{
<div class="container-fluid">
    <div class="col-lg-3 col-6" style="margin-left:100px">
        <!-- small box -->
        <div class="small-box bg-gradient-warning">
                        <div class="inner">
                            <h3>@Model.id</h3>

                            <p>Organizations</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>
}