@model TestProject.Models.UserModel
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Arche | Registration Page</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page" style="background-image: url('../../Assets/img/SignUp2.png');height:100%;background-size:cover;opacity:1;background-position:center; background-repeat:no-repeat ">
    <div class="register-box">
        <div class="register-logo">
            <a href="Login"><b>Arche</b>Softronix</a>
        </div>
        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
        {
            <div class="card">
                <div class="card-body register-card-body" style="background-color:antiquewhite">
                    <p class="login-box-msg">Register a new membership</p>
                    <div class="input-group mb-3">
                        @Html.LabelFor(x => x.UserName)
                        <div class="input-group-append" style="margin-left:10px">
                            <div>
                                @Html.EditorFor(x => x.UserName)

                            </div>
                        </div>
                        <div class="alert-default-danger">
                            @Html.ValidationMessageFor(x => x.UserName)
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.LabelFor(x => x.UserMail)
                        <div class="input-group-append" style="margin-left:40px">
                            <div>
                                @Html.EditorFor(x => x.UserMail)

                            </div>
                        </div>
                        <div class="alert-default-danger">
                            @Html.ValidationMessageFor(x => x.UserMail)
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.LabelFor(x => x.Password)
                        <div class="input-group-append" style="margin-left:10px">
                            <div>
                                @Html.EditorFor(x => x.Password)

                            </div>
                        </div>
                        <div class="alert-default-danger">
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4" style="margin-left:200px">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            @*<hr />*@
            @*</form>*@
        }
        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
                <i class="fab fa-facebook mr-2"></i>
                Sign up using Facebook
            </a>
            <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i>
                Sign up using Google+
            </a>
        </div>

        <a href="Login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
    </div><!-- /.card -->
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>